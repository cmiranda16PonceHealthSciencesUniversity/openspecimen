<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
    
<hibernate-mapping auto-import="false">
  <class name="com.krishagni.catissueplus.core.common.domain.UserConfigSetting" table="OS_USER_CFG_SETTINGS">
    <id name="id" column="IDENTIFIER">
      <generator class="native">
        <param name="sequence">OS_USER_CFG_SETTINGS_SEQ</param>
      </generator>
    </id>
    
    <many-to-one name="configUser" column="USER_ID"/>
    
    <many-to-one name="property" column="PROPERTY_ID"/>

    <property name="value" column="VALUE"/>

    <many-to-one name="activatedBy" column="ACTIVATED_BY"/>

    <property name="activationDate" column="ACTIVATION_DATE"/>

    <property name="activityStatus" column="ACTIVITY_STATUS"/>
    
    <query name="getAll">
      select
        ucs
      from
        com.krishagni.catissueplus.core.common.domain.UserConfigSetting ucs
      where
        ucs.activityStatus = 'Active'
    </query>

    <query name="getAllByModule">
      select
        ucs
      from
        com.krishagni.catissueplus.core.common.domain.UserConfigSetting ucs
        join ucs.property prop 
        join prop.module module
      where
        ucs.activityStatus = 'Active' and 
        module.name = :name
    </query>
  </class>
</hibernate-mapping>   
